<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clipChildren="false"
    android:background="#ffffff"
    >



   <LinearLayout
       android:id="@+id/homrfragment_linearTwo"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
        android:orientation="vertical"
       >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/homefragment_back"
               android:layout_width="@dimen/dp_20"
               android:layout_height="@dimen/dp_20"
               android:src="@mipmap/common_nav_btn_back_n_hdpi"
               android:layout_marginTop="@dimen/dp_30"
               />

           <EditText
               android:id="@+id/homefragment_input"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_25"
               android:hint="请输入要搜索的商品"
               android:layout_weight="1"
               android:layout_marginLeft="@dimen/dp_50"
               android:layout_marginTop="@dimen/dp_30"
               android:background="@drawable/homefragment_shape_editext"
               android:paddingLeft="@dimen/dp_15"
               />
           <TextView
               android:id="@+id/homefragment_sousuo"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="搜索"
               android:layout_toRightOf="@+id/homefragment_input"
               android:textSize="@dimen/dp_15"
               android:layout_marginRight="@dimen/dp_24"
               android:layout_marginLeft="@dimen/dp_10"
               android:layout_marginTop="@dimen/dp_30"
               />

       </LinearLayout>

       <com.jcodecraeer.xrecyclerview.XRecyclerView
           android:id="@+id/twohomefragment_recyclerview"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginTop="@dimen/dp_20"
           >

       </com.jcodecraeer.xrecyclerview.XRecyclerView>

   </LinearLayout>


   <LinearLayout
       android:id="@+id/linearSecond"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <android.support.v7.widget.RecyclerView
           android:id="@+id/home_fragment_poptwoclick"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

       </android.support.v7.widget.RecyclerView>

   </LinearLayout>




    <LinearLayout
        android:id="@+id/homrfragment_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/hone_fragment_change"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_24"
            android:src="@mipmap/common_btn_menu"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/hone_fragment_serach"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/common_nav_btn_search_n_hdpi"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_weight="1"
            />

    </RelativeLayout>
        
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >




       <com.stx.xhb.xbanner.XBanner
           android:id="@+id/hone_fragment_banner"
           android:layout_width="@dimen/dp_350"
           android:layout_height="@dimen/dp_200"
           android:layout_below="@+id/hone_fragment_serach"
           app:isClipChildrenMode="true"
           android:layout_gravity="center"
           android:layout_marginTop="@dimen/dp_20"
           >

       </com.stx.xhb.xbanner.XBanner>


       <LinearLayout
           android:layout_marginTop="@dimen/dp_10"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@mipmap/bg_pzsh_syf"
           >

           <TextView

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="热销新品"
               android:textSize="@dimen/dp_15"
               android:textColor="#c2c3fb"
               android:layout_weight="1"
               android:gravity="center"
               />
           <ImageView
               android:id="@+id/home_fragment_one_mores"
               android:layout_width="@dimen/dp_20"
               android:layout_height="@dimen/dp_20"
               android:src="@mipmap/home_btn_moer_pink_n_hdpi"
               android:layout_marginRight="@dimen/dp_20"
               />
       </LinearLayout>
       <android.support.v7.widget.RecyclerView

           android:id="@+id/hone_fragment_recyclerviewtwo"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           >

       </android.support.v7.widget.RecyclerView>


       <LinearLayout
           android:layout_marginTop="@dimen/dp_10"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@mipmap/bg_mlss_syf"
           >

           <TextView
               android:id="@+id/home_fragment_one_title"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="魔力时尚"
               android:textSize="@dimen/dp_15"
               android:textColor="#c2c3fb"
               android:layout_weight="1"
               android:gravity="center"
               />
           <ImageView
               android:id="@+id/home_fragment_one_more"
               android:layout_width="@dimen/dp_20"
               android:layout_height="@dimen/dp_20"
               android:src="@mipmap/home_btn_more_purple_n_hdpi"
                android:layout_marginRight="@dimen/dp_20"
               />
       </LinearLayout>


       <android.support.v7.widget.RecyclerView
           android:id="@+id/hone_fragment_recyclerview"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >
       </android.support.v7.widget.RecyclerView>



           <LinearLayout
               android:layout_marginTop="@dimen/dp_10"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@mipmap/bg_rxxp_syf"
               >

               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="品质生活"
                   android:textSize="@dimen/dp_15"
                   android:textColor="#c2c3fb"
                   android:layout_weight="1"
                   android:gravity="center"
                   />
               <ImageView
                   android:id="@+id/home_fragment_one_moress"
                   android:layout_width="@dimen/dp_20"
                   android:layout_height="@dimen/dp_20"
                   android:src="@mipmap/home_btn_moer_pink_n_hdpi"
                   android:layout_marginRight="@dimen/dp_20"
                   />
           </LinearLayout>
           <android.support.v7.widget.RecyclerView
               android:id="@+id/hone_fragment_recyclerviewthree"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               >

           </android.support.v7.widget.RecyclerView>




       </LinearLayout>

   </ScrollView>
    </LinearLayout>
</LinearLayout>
