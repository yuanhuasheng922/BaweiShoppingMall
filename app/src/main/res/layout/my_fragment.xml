<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_wdf"
    >


        <RelativeLayout
            android:layout_marginTop="@dimen/dp_80"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/myfragment_shape"

            >

                <ImageView
                    android:id="@+id/myfragment_head"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:src="@mipmap/touxiang_wdf"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/myfragment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我是吃不胖的小姐姐"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_below="@+id/myfragment_head"
                    android:layout_centerHorizontal="true"
                    />

                <ImageView
                    android:id="@+id/tou"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/grzl_wdf"
                    android:layout_below="@+id/myfragment_name"
                    android:layout_marginTop="@dimen/dp_70"
                    android:layout_marginLeft="@dimen/dp_24"
                    />
                <TextView
                    android:id="@+id/myfragment_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="个人资料"
                    android:textSize="@dimen/dp_15"
                    android:layout_below="@+id/myfragment_name"
                    android:layout_toRightOf="@+id/tou"
                    android:layout_marginTop="@dimen/dp_73"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_24"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                        android:background="#d1d1d1"
                    android:layout_marginTop="@dimen/dp_213"
                    android:layout_marginLeft="@dimen/dp_70"
                    android:layout_marginRight="@dimen/dp_24"
                    />

                <ImageView
                    android:id="@+id/myfragment_circles"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/wdqz_wdf"
                    android:layout_below="@+id/myfragment_name"
                    android:layout_marginTop="@dimen/dp_120"
                    android:layout_marginLeft="@dimen/dp_24"
                    />

                <TextView
                    android:id="@+id/myfragment_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="我的圈子"
                    android:textSize="@dimen/dp_15"
                    android:layout_below="@+id/myfragment_name"
                    android:layout_toRightOf="@+id/tou"
                    android:layout_marginTop="@dimen/dp_120"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_24"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#d1d1d1"
                    android:layout_marginTop="@dimen/dp_260"
                    android:layout_marginLeft="@dimen/dp_70"
                    android:layout_marginRight="@dimen/dp_24"
                    />


                <ImageView
                    android:id="@+id/myfragment_foots"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/zj_wdf"
                    android:layout_below="@+id/myfragment_name"
                    android:layout_marginTop="@dimen/dp_170"
                    android:layout_marginLeft="@dimen/dp_24"
                    />

                <TextView
                    android:id="@+id/myfragment_foot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="我的足迹"
                    android:textSize="@dimen/dp_15"
                    android:layout_below="@+id/myfragment_name"
                    android:layout_toRightOf="@+id/tou"
                    android:layout_marginTop="@dimen/dp_170"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_24"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#d1d1d1"
                    android:layout_marginTop="@dimen/dp_310"
                    android:layout_marginLeft="@dimen/dp_70"
                    android:layout_marginRight="@dimen/dp_24"
                    />


                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/wdqb_wdf"
                    android:layout_below="@+id/myfragment_name"
                    android:layout_marginTop="@dimen/dp_220"
                    android:layout_marginLeft="@dimen/dp_24"
                    />

                <TextView
                    android:id="@+id/myfragment_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="我的钱包"
                    android:textSize="@dimen/dp_15"
                    android:layout_below="@+id/myfragment_name"
                    android:layout_toRightOf="@+id/tou"
                    android:layout_marginTop="@dimen/dp_220"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_24"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#d1d1d1"
                    android:layout_marginTop="@dimen/dp_360"
                    android:layout_marginLeft="@dimen/dp_70"
                    android:layout_marginRight="@dimen/dp_24"
                    />

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/shdz_wdf"
                    android:layout_below="@+id/myfragment_name"
                    android:layout_marginTop="@dimen/dp_270"
                    android:layout_marginLeft="@dimen/dp_24"
                    />

                <TextView
                    android:id="@+id/myfragment_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="我的收货地址"
                    android:textSize="@dimen/dp_15"
                    android:layout_below="@+id/myfragment_name"
                    android:layout_toRightOf="@+id/tou"
                    android:layout_marginTop="@dimen/dp_270"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_24"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#d1d1d1"
                    android:layout_marginTop="@dimen/dp_410"
                    android:layout_marginLeft="@dimen/dp_70"
                    android:layout_marginRight="@dimen/dp_24"
                    />

        </RelativeLayout>
</RelativeLayout>
