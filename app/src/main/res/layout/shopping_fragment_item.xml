<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/linearr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <CheckBox
            android:id="@+id/shopping_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:textSize="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计"
            android:textSize="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/shopping_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_120"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="#ff0000"
            />

        <Button
            android:id="@+id/shopping_money"
            android:layout_width="@dimen/dp_118"
            android:layout_height="@dimen/dp_50"
            android:background="#ff39a9"
            android:text="去结算"
            android:textSize="@dimen/dp_20"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/shopping_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearr"
        >

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
