<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:background="@mipmap/login_register_background"
    android:orientation="vertical"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/mainactivity_phone"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_140"
        android:src="@mipmap/login_icon_phone"
        android:layout_marginLeft="@dimen/dp_30"

        />

    <EditText
        android:id="@+id/mainactivity_phonenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_140"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:hint="手机号"
        android:background="@null"
        android:digits="0123456789"
        android:textSize="@dimen/dp_15"
        />
    
</LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@mipmap/login_icon_lock"
            android:layout_marginLeft="@dimen/dp_30"

            />

        <EditText
            android:id="@+id/mainactivity_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:hint="登录密码"
            android:background="@null"
            android:textSize="@dimen/dp_15"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/mainactivity_eye"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
           android:src="@mipmap/login_icon_eye"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <CheckBox
           android:id="@+id/mainactivity_rememberpassword"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/dp_20"
           android:layout_marginLeft="@dimen/dp_30"
            android:text="记住密码"
           android:layout_weight="1"
           android:textColor="#ffffff"
           android:textSize="@dimen/dp_12"
           android:buttonTint="#ffffff"
           />
       <TextView
           android:id="@+id/mainactivity_register"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="快速注册"
           android:layout_marginRight="30dp"
           android:layout_marginTop="@dimen/dp_20"
           android:textSize="@dimen/dp_12"
           android:textColor="#ffffff"
           />

   </LinearLayout>

    <Button
        android:id="@+id/mainactivity_register_login"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_145"
        android:text="登录"
        android:textSize="@dimen/dp_20"
        android:background="@drawable/login_button"
        android:textColor="#ff765c"
        />

</LinearLayout>