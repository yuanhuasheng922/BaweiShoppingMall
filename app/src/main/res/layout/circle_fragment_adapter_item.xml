<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_fragment"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_44"
        >
        <ImageView
            android:id="@+id/circle_fragment_headimage"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/circle_fragment_headimagename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_10"
            android:text="小白妞"
           android:layout_toRightOf="@+id/circle_fragment_headimage"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_16"
            />

        <TextView
            android:id="@+id/circle_fragment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_10"
            android:text="2018-11-13 13:00"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_20"
            />
            <TextView
                android:id="@+id/circle_fragment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circle_fragment_headimage"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                />

        <ImageView
            android:id="@+id/circle_fragment_image"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_140"
            android:src="@mipmap/ic_launcher"
            android:layout_below="@+id/circle_fragment_title"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"

            />

        <ImageView
            android:id="@+id/circle_fragment_click"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@+id/circle_fragment_image"
            android:src="@mipmap/common_btn_prise_n_hdpi"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_34"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            />


    </RelativeLayout>

</LinearLayout>
