<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity"
    android:orientation="vertical"
    android:background="@mipmap/login_register_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_125"
            android:src="@mipmap/register_icon_phone"
            android:layout_marginLeft="@dimen/dp_30"

            />

        <EditText
            android:id="@+id/registeractivity_phonenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_125"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:hint="手机号"
            android:digits="0123456789"
            android:background="@null"
            android:textSize="@dimen/dp_15"
            />

    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@mipmap/register_icon_verification"
            android:layout_marginLeft="@dimen/dp_30"

            />

        <EditText
            android:id="@+id/registeractivity_verificationcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:hint="验证码"
            android:background="@null"
            android:textSize="@dimen/dp_15"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/registeractivity_getverificationcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textSize="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:textColor="#ffffff"
            />

    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@mipmap/register_icon_lock"
            android:layout_marginLeft="@dimen/dp_30"

            />

        <EditText
            android:id="@+id/registeractivity_loginpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:hint="登录密码"
            android:background="@null"
            android:textSize="@dimen/dp_15"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/registeractivity_eye"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/login_icon_eye"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/registeractivity_immediatelylogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_13"
            android:text="已有账户? 立即登录"
            android:layout_marginTop="@dimen/dp_20"
           android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_30"
            android:textColor="#ffffff"

            />

    </RelativeLayout>
    <Button
        android:id="@+id/registeractivity_register"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"

        android:text="注册"
        android:textSize="@dimen/dp_15"
        android:textColor="#ff765c"
      android:layout_marginTop="@dimen/dp_110"
        android:background="@drawable/login_button"
        />



</LinearLayout>